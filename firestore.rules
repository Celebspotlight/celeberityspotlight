rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - secure access rules
    match /users/{userId} {
      // Users can read and write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow authenticated users to read basic user info for bookings and admin access
      allow read: if request.auth != null;
    }
    
    // Bookings collection - secure access rules
    match /bookings/{bookingId} {
      // Users can create new bookings when authenticated
      allow create: if request.auth != null;
      // Users can read and update their own bookings
      allow read, update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Allow any authenticated user to read and write bookings (for admin panel)
      allow read, write: if request.auth != null;
    }
    
    // Payments collection - for admin access to payment data
    match /payments/{paymentId} {
      // Allow authenticated users to create and access payments
      allow read, write: if request.auth != null;
    }
    
    // Celebrities collection - read-only for users, write for authenticated users
    match /celebrities/{celebrityId} {
      // Anyone can read celebrity data (for browsing)
      allow read: if true;
      // Allow authenticated users to modify celebrity data (admin panel handles auth)
      allow write: if request.auth != null;
    }
    
    // Acting coaches collection - read for all, write for authenticated users
    match /actingCoaches/{coachId} {
      // Anyone can read acting coach data (for browsing)
      allow read: if true;
      // Allow authenticated users to add/modify acting coach data
      allow write: if request.auth != null;
    }
    
    // Admin-specific collections
    match /admin/{document} {
      // Only admins can access admin-specific data
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Analytics and visitor tracking (if needed)
    match /analytics/{document} {
      // Allow read/write for analytics tracking
      allow read, write: if request.auth != null;
    }
    
    // Public data that anyone can read
    match /public/{document} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}